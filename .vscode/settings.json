{
  "eslint.workingDirectories": ["./frontend"],
  "stylelint.enable": true,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "ruff.organizeImports": true,
  "python.terminal.activateEnvironment": true,
  "python.testing.pytestArgs": [
    "backend/tests"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "[css][less][scss]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": "explicit"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "files.encoding": "utf8",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#d6f2a7",
    "activityBar.background": "#d6f2a7",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#3da4e2",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#d6f2a7",
    "statusBar.background": "#c2eb7b",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#aee44f",
    "statusBarItem.remoteBackground": "#c2eb7b",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#c2eb7b",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#c2eb7b99",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.remoteColor": "#c2eb7b"  
}
